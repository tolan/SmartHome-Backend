{
    "extends": "@tsconfig/node17/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
    },
    "include": [
        "./src/**/*",
        "./typings/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
}